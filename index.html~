  <div id="stickers-page">
    <script>
var xmlhttp = new XMLHttpRequest();
xmlhttp.onreadystatechange = function() {
    if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
        var stickers = JSON.parse(xmlhttp.responseText);
        load_stickers(stickers);
    }
}
xmlhttp.open("GET", "stickers.json", true);
xmlhttp.send();

function load_stickers(arr) {
  var output="<table border=0 padding='10%'>";
    for(var i = 0; i < arr.length; i=i+3) {
          output+="<tr>";
          for(j=i;((j<i+3)&&(j<arr.length));j++)
          {
          output+="<td><paper-shadow z='3'><paper-item noink style='background:white;'>"+
          "<table width='100%'><tr><td><paper-shadow z='3'><img src='Stickers/"+arr[j].path+"' width='100%'></paper-shadow></td></tr>"+
          "<tr><td><h3>"+arr[j].title+"</h3><a href='Stickers/"+arr[j].path+"' download><paper-fab icon='file-download' style='float:right;'></paper-fab></a></td></tr></table>"+
          "</paper-item></paper-shadow></td>";
          }
          output+="</tr>";
    }
    document.getElementById("stickers-page").innerHTML+=output+"</table>";
   }
  </script>
  </div>

